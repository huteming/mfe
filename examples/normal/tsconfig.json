{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "utils/*": ["utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["tests"]
}
